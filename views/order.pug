extends layout

block stylesheet
    link(rel="stylesheet", href="../static/styles/order.css")

block section
    h1#title-menu
        i.fa-solid.fa-credit-card
        |  Order


    .container 
        
        .payment-form
            form(action="/order" method="post")
                input(type="text" name="name" placeholder="Your beautiful name")

                input(type="email" name="email" placeholder="Your email")

                input(type="tel" name="phone" placeholder="Your phone number")
                

                #location 
                    label
                        input(type="radio" name="location" value="Block-1")
                        | Block-1

                    label
                        input(type="radio" name="location" value="Block-2")
                        | Block-2

                    label
                        input(type="radio" name="location" value="Block-3")
                        | Block-3

                    label
                        input(type="radio" name="location" value="Block-4")
                        | Block-4

                    label
                        input(type="radio" name="location" value="Block-5")
                        | Block-5

                input(type="submit", value="Payment Complete")
        
        
        .payment-form
            img#pay(src="static/Payments.jpeg", alt="Pay me")

                    
                    